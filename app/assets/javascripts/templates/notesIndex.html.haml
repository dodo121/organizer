%h1
  Notes
  .glyphicon.glyphicon-plus{'ng-click'=>'showForm'}

.row
  %my-note.col-sm-3{'id'=>'note_{{+ note.id}}', 'ng-repeat'=>'note in notes'}
    .well.well-sm{'ng-click' => 'editNote(note)'}
      .glyphicon.glyphicon-remove.pull-right.delete_button{'ng-click'=>'deleteNote(note)'}
      .note-content{'ng-show' => 'note.editing != true'}
        {{note.content}}
      %input{'type' => 'text',
             'ng-show' => 'note.editing == true',
             'class' => 'edit-note',
             'ng-model'=> 'note.content' }

